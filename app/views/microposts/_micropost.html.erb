<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.avatar_small_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span> 
  <span class="content">
    <%= micropost.content %>
        <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.timestamp.posted" %> 
    <%= time_ago_in_words micropost.created_at %>
    <%= t "micropost.timestamp.ago" %> 
    <% if current_user?(micropost.user) %>
      <%= link_to t("shared.delete"), micropost, method: :delete, data: {confirm: t("shared.you_sure")} %>
    <% end %>
  </span>
</li>
